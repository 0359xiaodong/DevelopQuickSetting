<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/adb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_adb"
        />

    <CheckBox
        android:id="@+id/layout_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_layout_border"
        />

    <CheckBox
        android:id="@+id/overdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_overdraw"
        />

    <CheckBox
        android:id="@+id/profile_gpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_gpu_render"
        />

    <CheckBox
        android:id="@+id/always_destroy_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/immediately_destroy_activities"
        />

</LinearLayout>
